    <script>
        // COUNTDOWN TIMER FOR MAY 2, 2026
        const targetDate = new Date("May 2, 2026 15:00:00").getTime();
        setInterval(() => {
            const now = new Date().getTime();
            const d = targetDate - now;
            document.getElementById('days').innerText = Math.max(0, Math.floor(d / (1000 * 60 * 60 * 24)));
            document.getElementById('hours').innerText = Math.max(0, Math.floor((d % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)));
            document.getElementById('mins').innerText = Math.max(0, Math.floor((d % (1000 * 60 * 60)) / (1000 * 60)));
            document.getElementById('secs').innerText = Math.max(0, Math.floor((d % (1000 * 60)) / 1000));
        }, 1000);

        // RSVP SUBMISSION
        const scriptURL = 'REPLACE_WITH_YOUR_URL'; 
        const form = document.getElementById('rsvp-form');
        const btn = document.getElementById('submit-btn');

        form.addEventListener('submit', e => {
            e.preventDefault();
            btn.disabled = true;
            btn.innerText = "SENDING...";
            fetch(scriptURL, { method: 'POST', body: new FormData(form)})
                .then(() => {
                    form.classList.add('hidden');
                    document.getElementById('success-msg').classList.remove('hidden');
                })
                .catch(error => {
                    console.error('Error!', error.message);
                    btn.disabled = false;
                    btn.innerText = "TRY AGAIN";
                });
        });
    </script>
